{{#if signupMessage}}
    <div class="alert alert-danger">{{signupMessage}}</div>
{{/if}}

<div class="login-userheading">
<h3>Create an Account</h3>
<h4>Continue where you left off</h4>
</div>
<form action="/signup" method="POST">
<div class="form-login">
<label>Full Name</label>
<div class="form-addons">
<input type="text" name="fullname" placeholder="Enter your full name">
<img src="img/icons/users1.svg" alt="img">
</div>
</div>
<div class="form-login">
<label>Email</label>
<div class="form-addons">
<input type="text"  name="email" placeholder="Enter your email address">
<img src="img/icons/mail.svg" alt="img">
</div>
</div>
<div class="form-login">
<label>Password</label>
<div class="pass-group">
<input type="password"  name="password" class="pass-input" placeholder="Enter your password">
<span class="fas toggle-password fa-eye-slash"></span>
</div>
</div>
<div class="form-login">
 <button class="btn btn-login" type="submit">Registrarse</button>
</div>
</form>



</div>
</div>

</div>
</div>
</div>
